%p#notice= notice
%h1 Projects
%table
  %thead
    %tr
      %th Code
      %th Title
      %th Iis code
      %th Prefecture code
      %th Incorporation date
      %th Incorporation protocol
      %th Phase code
      %th Priority code
      %th Classification code
      %th Has multiple collective decisions
      %th Credit first quarter
      %th Credit second quarter
      %th Credit third quarter
      %th Credit fourth quarter
      %th Payments until last year according to sae
      %th Iban
      %th Expense code
      %th Ppi payments
      %th Proposed credits
      %th Credit limit of implementation body
      %th Comments
      %th Supervisor body
      %th Act
      %th Collective decision
      %th Budget
      %th Budget history
      %th{:colspan => "3"}
  %tbody
    - @projects.each do |project|
      %tr
        %td= project.code
        %td= project.title
        %td= project.iis_code
        %td= project.prefecture_code
        %td= project.incorporation_date
        %td= project.incorporation_protocol
        %td= project.phase_code
        %td= project.priority_code
        %td= project.classification_code
        %td= project.has_multiple_collective_decisions
        %td= project.credit_first_quarter
        %td= project.credit_second_quarter
        %td= project.credit_third_quarter
        %td= project.credit_fourth_quarter
        %td= project.payments_until_last_year_according_to_sae
        %td= project.IBAN
        %td= project.expense_code
        %td= project.PPI_payments
        %td= project.proposed_credits
        %td= project.credit_limit_of_implementation_body
        %td= project.comments
        %td= project.supervisor_body_id
        %td= project.act_id
        %td= project.collective_decision_id
        %td= project.budget
        %td= project.budget_history
        %td= link_to 'Show', project
        %td= link_to 'Edit', edit_project_path(project)
        %td= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Project', new_project_path
