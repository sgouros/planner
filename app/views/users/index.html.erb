<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Surname</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Hashed password</th>
      <th>Admin</th>
      <th>Organisation</th>
      <th>Manager</th>
      <th>Normalized name</th>
      <th>Normalized surname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.surname %></td>
        <td><%= user.phone %></td>
        <td><%= user.email %></td>
        <td><%= user.hashed_password %></td>
        <td><%= user.admin %></td>
        <td><%= user.organisation_id %></td>
        <td><%= user.manager %></td>
        <td><%= user.normalized_name %></td>
        <td><%= user.normalized_surname %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

