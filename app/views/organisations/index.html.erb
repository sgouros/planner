<p id="notice"><%= notice %></p>

<h1>Organisations</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Fax</th>
      <th>Contact persion</th>
      <th>Email</th>
      <th>Is this my organisation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organisations.each do |organisation| %>
      <tr>
        <td><%= organisation.code %></td>
        <td><%= organisation.name %></td>
        <td><%= organisation.address %></td>
        <td><%= organisation.phone %></td>
        <td><%= organisation.fax %></td>
        <td><%= organisation.contact_persion %></td>
        <td><%= organisation.email %></td>
        <td><%= organisation.is_this_my_organisation %></td>
        <td><%= link_to 'Show', organisation %></td>
        <td><%= link_to 'Edit', edit_organisation_path(organisation) %></td>
        <td><%= link_to 'Destroy', organisation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

