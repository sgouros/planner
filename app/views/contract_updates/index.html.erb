<p id="notice"><%= notice %></p>

<h1>Contract Updates</h1>

<table>
  <thead>
    <tr>
      <th>Update version</th>
      <th>Amount</th>
      <th>Start date</th>
      <th>Comments</th>
      <th>Contract</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contract_updates.each do |contract_update| %>
      <tr>
        <td><%= contract_update.update_version %></td>
        <td><%= contract_update.amount %></td>
        <td><%= contract_update.start_date %></td>
        <td><%= contract_update.comments %></td>
        <td><%= contract_update.contract_id %></td>
        <td><%= link_to 'Show', contract_update %></td>
        <td><%= link_to 'Edit', edit_contract_update_path(contract_update) %></td>
        <td><%= link_to 'Destroy', contract_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

