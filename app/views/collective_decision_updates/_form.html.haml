= form_for(collective_decision_update) do |f|
  - if collective_decision_update.errors.any?
    #error_explanation
      %h2
        = pluralize(collective_decision_update.errors.count, "error")
        prohibited this collective_decision_update from being saved:
      %ul
        - collective_decision_update.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :protocol
    = f.text_field :protocol
  .field
    = f.label :start_date
    = f.date_select :start_date
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :comments
    = f.text_area :comments
  .field
    = f.label :collective_decision_id
    = f.number_field :collective_decision_id
  .actions
    = f.submit
