<p id="notice"><%= notice %></p>

<h1>Accountables</h1>

<table>
  <thead>
    <tr>
      <th>Surname</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Fax</th>
      <th>Email</th>
      <th>Organisation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accountables.each do |accountable| %>
      <tr>
        <td><%= accountable.surname %></td>
        <td><%= accountable.name %></td>
        <td><%= accountable.phone %></td>
        <td><%= accountable.fax %></td>
        <td><%= accountable.email %></td>
        <td><%= accountable.organisation_id %></td>
        <td><%= link_to 'Show', accountable %></td>
        <td><%= link_to 'Edit', edit_accountable_path(accountable) %></td>
        <td><%= link_to 'Destroy', accountable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Accountable', new_accountable_path %>
