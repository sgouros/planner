= simple_form_for(act_plan) do |f|
  - if act_plan.errors.any?
    #error_explanation
      - act_plan.errors.full_messages.each do |message|
        .alert.alert-danger{:role => "alert"}
          %span.glyphicon.glyphicon-exclamation-sign
          =message

  = f.input :code, label: t('act_plan.code')
  = f.input :description, as: :text, label: t('act_plan.description')
  = f.input :target_id, label: t('act_plan.target')
  = f.button :submit, label: t('submit')
