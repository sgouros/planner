<p id="notice"><%= notice %></p>

<h1>Contractors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Fiscal code</th>
      <th>Tax department</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Fax</th>
      <th>Contact person</th>
      <th>Email</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contractors.each do |contractor| %>
      <tr>
        <td><%= contractor.name %></td>
        <td><%= contractor.fiscal_code %></td>
        <td><%= contractor.tax_department %></td>
        <td><%= contractor.address %></td>
        <td><%= contractor.phone %></td>
        <td><%= contractor.fax %></td>
        <td><%= contractor.contact_person %></td>
        <td><%= contractor.email %></td>
        <td><%= contractor.comments %></td>
        <td><%= link_to 'Show', contractor %></td>
        <td><%= link_to 'Edit', edit_contractor_path(contractor) %></td>
        <td><%= link_to 'Destroy', contractor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

