= simple_form_for(act) do |f|
  - if act.errors.any?
    #error_explanation
      - act.errors.full_messages.each do |message|
        .alert.alert-danger{:role => "alert"}
          %span.glyphicon.glyphicon-exclamation-sign
          =message

  = f.input :code, disabled: is_disabled
  = f.input :description, as: :text
  = f.input :act_plan_id
  = f.button :submit
