= form_for(target) do |f|
  - if target.errors.any?
    #error_explanation
      %h2
        = pluralize(target.errors.count, "error")
        prohibited this target from being saved:
      %ul
        - target.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :code
    = f.text_field :code
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :measure_id
    = f.select( :measure_id, 1..99, {} )
  .actions
    = f.submit
