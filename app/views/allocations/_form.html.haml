= simple_form_for(allocation) do |f|
  - if allocation.errors.any?
    #error_explanation
      - allocation.errors.full_messages.each do |message|
        .alert.alert-danger{:role => 'alert'}
          %span.glyphicon.glyphicon-exclamation-sign
          =message

  = f.input :protocol, as: :string
  = f.input :start_date, as: :date
  = f.input :amount, as: :string
  = f.input :project_id, collection: @projects_for_select_box
  = f.button :submit, class:'btn btn-success'
  = link_to t(:cancel), 'javascript:history.go(-1);', class:'btn btn-danger pull-right'
