<p id="notice"><%= notice %></p>

<h1>Schedule Actions</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Schedule</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedule_actions.each do |schedule_action| %>
      <tr>
        <td><%= schedule_action.description %></td>
        <td><%= schedule_action.start_date %></td>
        <td><%= schedule_action.end_date %></td>
        <td><%= schedule_action.schedule_id %></td>
        <td><%= link_to 'Show', schedule_action %></td>
        <td><%= link_to 'Edit', edit_schedule_action_path(schedule_action) %></td>
        <td><%= link_to 'Destroy', schedule_action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

